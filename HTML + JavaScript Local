<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Troca de Itens</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    #chatBox {
      height: 300px;
      overflow-y: auto;
      border: 1px solid #ccc;
      padding: 10px;
      background: #f9f9f9;
    }
    .msg { margin-bottom: 10px; }
    .msg strong { color: #198754; }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h3 class="text-center">Chat de Troca de Itens</h3>
    <div class="mb-3">
      <label for="usuario" class="form-label">Seu nome</label>
      <input type="text" id="usuario" class="form-control">
    </div>
    <div class="mb-3">
      <label for="mensagem" class="form-label">Mensagem (Ex: "Troco latas por livros")</label>
      <input type="text" id="mensagem" class="form-control">
    </div>
    <button class="btn btn-success mb-3" onclick="enviarMensagem()">Enviar</button>

    <div id="chatBox" class="rounded shadow"></div>
  </div>

  <script>
    const chatBox = document.getElementById("chatBox");

    function enviarMensagem() {
      const usuario = document.getElementById("usuario").value;
      const mensagem = document.getElementById("mensagem").value;
      if (!usuario || !mensagem) return;

      const novaMsg = document.createElement("div");
      novaMsg.className = "msg";
      novaMsg.innerHTML = `<strong>${usuario}:</strong> ${mensagem}`;
      chatBox.appendChild(novaMsg);

      chatBox.scrollTop = chatBox.scrollHeight;
      document.getElementById("mensagem").value = "";
    }
  </script>
</body>
</html>
